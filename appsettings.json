{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityDb": "Server=tcp:devops-ai-agent-sql-server.database.windows.net,1433;Initial Catalog=schooldevdatabse;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;Authentication='Active Directory Default';"
  },
  "Jwt": {
    "Issuer": "https://localhost:5001",
    "Audience": "school-management-system",
    "SecretKey": "your-256-bit-secret-key-change-this-in-production-min-32-chars",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "Redis": {
    "Connection": "localhost:6379",
    "InstanceName": "AuthService:"
  },
  "Twilio": {
    "VerifyServiceSid": "VAXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
    "AccountSid": "ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
    "AuthToken": "your_twilio_auth_token_here"
  },
  "ServiceBus": {
    "Connection": "Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key-here",
    "TopicName": "identity-events"
  },
  "Azure": {
    "KeyVault": {
      "Uri": "https://devschoolkeyvault.vault.azure.net/",
      "Enabled": false
    }
  },
  "Db": {
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "MaxRetryDelaySeconds": 10
  }
}